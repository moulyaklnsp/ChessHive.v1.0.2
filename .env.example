# ChessHive .env example
# Copy to .env and fill values before running in development or production
PORT=3001
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=chesshive
SESSION_SECRET=your_secret_key
SESSION_COOKIE_NAME=sid
SESSION_TTL_SECONDS=1209600

# SMTP (optional) - if not set, ethereal test account is used in development
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Cloudinary (optional - for uploads)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Client origin (used for SPA redirects)
CLIENT_ORIGIN=http://localhost:3000

# Misc
NODE_ENV=development
REACT_APP_SOCKET_URL=
